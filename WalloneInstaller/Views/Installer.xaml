<UserControl
    x:Class="WalloneInstaller.Views.Installer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WalloneInstaller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WalloneInstaller.ViewModels"
    Width="1200"
    Height="667"
    d:DataContext="{d:DesignInstance Type=viewModels:InstallerVM,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="492" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="Left">
            <Image
                x:Name="image1"
                Source="/WalloneInstaller;component/Images/Image.png"
                Stretch="UniformToFill" />
            <local:SocialsFooter
                Width="40"
                Margin="30,0,0,30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" />
            <TextBlock
                Margin="80,0,0,30"
                VerticalAlignment="Bottom"
                FontWeight="Regular"
                Style="{StaticResource TextBlock}"
                Text="Обои: 木吉子 Furina" />
        </Grid>
        <Grid Grid.Column="1">
            <Grid Margin="72,162,0,0">
                <WrapPanel
                    x:Name="LogoWallone"
                    Width="140"
                    Height="43"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Cursor="Hand"
                    MouseDown="LogoWallone_MouseDown">
                    <Image
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="/WalloneInstaller;component/Images/IconFull.png" />
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock
                            Style="{StaticResource TextBlockLogo}"
                            Text="Wallone"
                            TextWrapping="Wrap" />
                        <TextBlock
                            FontSize="16"
                            FontWeight="Light"
                            Style="{StaticResource TextBlockLogo}"
                            Text="#Nice Day"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </WrapPanel>
                <StackPanel Margin="0,59,0,0">
                    <TextBlock
                        Width="376"
                        HorizontalAlignment="Left"
                        FontSize="40"
                        FontWeight="SemiBold"
                        Style="{StaticResource TextBlock}"
                        Text="Установка займет немного времени. Подождите..."
                        TextWrapping="Wrap" />
                    <StackPanel>
                        <ProgressBar
                            Width="287"
                            Height="6"
                            Margin="0,32,0,0"
                            HorizontalAlignment="Left"
                            Style="{StaticResource ProcessBarStyle}"
                            Value="{Binding ValueProcess, FallbackValue=0}" />
                        <TextBlock
                            Margin="0,8,0,0"
                            Style="{StaticResource TextBlock}"
                            Text="{Binding Text}" />
                        <CheckBox
                            Width="260"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Left"
                            Content="Установить дополнительный набор"
                            Foreground="White"
                            IsChecked="{Binding IsChecked, Mode=TwoWay}"
                            Style="{StaticResource CheckBoxStyle}" />
                    </StackPanel>
                    <Button
                        Width="248"
                        Height="48"
                        Margin="0,32,0,0"
                        HorizontalAlignment="Left"
                        Command="{Binding ContinueButtonCommand}"
                        Content="Продолжить"
                        IsEnabled="{Binding IsEnabled}"
                        Style="{StaticResource ButtonNext}" />
                </StackPanel>
                <local:Footer Margin="0,0,0,20" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
