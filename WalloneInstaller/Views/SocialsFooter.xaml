<UserControl
    x:Class="WalloneInstaller.Views.SocialsFooter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WalloneInstaller.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="100"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Column="0"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Click="VKButton_Click"
            FocusVisualStyle="{x:Null}"
            Style="{x:Null}">
            <Image Cursor="Hand" Source="/Images/vk.png" />
        </Button>
        <Button
            Grid.Column="2"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Click="TelegramButton_Click"
            FocusVisualStyle="{x:Null}">
            <Image Cursor="Hand" Source="/Images/telegram.png" />
        </Button>
    </Grid>
</UserControl>
