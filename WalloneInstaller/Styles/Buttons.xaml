    </Style>


    <Style x:Key="ButtonSelect" TargetType="Button">
        <Setter Property="FontFamily" Value="/Fonts/SegoeUIVF.ttf#Segoe UI Variable Texts" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Foreground" Value="#202020" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#007AFF" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonDownloadPartner" TargetType="Button">
        <Setter Property="FontFamily" Value="/Fonts/SegoeUIVF.ttf#Segoe UI Variable Texts" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="Background" Value="#191919" />
        <Setter Property="Foreground" Value="#007AFF" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <WrapPanel
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <TextBlock
                                Margin="0,3,5,1"
                                Background="{TemplateBinding Background}"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="12"
                                FontWeight="Regular"
                                Foreground="{TemplateBinding Foreground}"
                                Text="&#xE896;" />
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}" />
                        </WrapPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BaseBattonSocial" TargetType="Button" />

    <Style
        x:Key="ButtonSocialVK"
        BasedOn="{StaticResource BaseBattonSocial}"
        TargetType="Button" />
</ResourceDictionary>